{
    "manifest_version": 3,
    "name": "Vinted Duplicator - List Faster",
    "version": "1.1.0",
    "description": "Duplicate Vinted listings in 1 click",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [ 
      "https://*.vinted.net/*",
      "https://*.vinted.fr/*",         
      "https://www.vinted.fr/*",
      "https://www.vinted.com/*",
      "https://www.vinted.co.uk/*",
      "https://www.vinted.de/*",
      "https://www.vinted.es/*",
      "https://www.vinted.it/*",
      "https://www.vinted.pl/*",
      "https://www.vinted.be/*",
      "https://www.vinted.nl/*",
      "https://www.vinted.at/*",
      "https://www.vinted.cz/*",
      "https://www.vinted.lt/*",
      "https://www.vinted.lu/*",
      "https://www.vinted.pt/*",
      "https://www.vinted.se/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_title": "Vinted Duplicator"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [        
          "https://www.vinted.fr/*",
          "https://www.vinted.com/*",
          "https://www.vinted.co.uk/*",
          "https://www.vinted.de/*",
          "https://www.vinted.es/*",
          "https://www.vinted.it/*",
          "https://www.vinted.pl/*",
          "https://www.vinted.be/*",
          "https://www.vinted.nl/*",
          "https://www.vinted.at/*",
          "https://www.vinted.cz/*",
          "https://www.vinted.lt/*",
          "https://www.vinted.lu/*",
          "https://www.vinted.pt/*",
          "https://www.vinted.se/*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      },
      {
        "matches": [
          "https://www.vinted.fr/*",
          "https://www.vinted.com/*",
          "https://www.vinted.co.uk/*",
          "https://www.vinted.de/*",
          "https://www.vinted.es/*",
          "https://www.vinted.it/*",
          "https://www.vinted.pl/*",
          "https://www.vinted.be/*",
          "https://www.vinted.nl/*",
          "https://www.vinted.at/*",
          "https://www.vinted.cz/*",
          "https://www.vinted.lt/*",
          "https://www.vinted.lu/*",
          "https://www.vinted.pt/*",
          "https://www.vinted.se/*"
        ],
        "js": ["contentRelist.js"],
        "run_at": "document_idle",
        "exclude_matches": [
          "https://www.vinted.fr/items/new*",
          "https://www.vinted.com/items/new*",
          "https://www.vinted.co.uk/items/new*",
          "https://www.vinted.de/items/new*",
          "https://www.vinted.es/items/new*",
          "https://www.vinted.it/items/new*",
          "https://www.vinted.pl/items/new*",
          "https://www.vinted.be/items/new*",
          "https://www.vinted.nl/items/new*",
          "https://www.vinted.at/items/new*",
          "https://www.vinted.cz/items/new*",
          "https://www.vinted.lt/items/new*",
          "https://www.vinted.lu/items/new*",
          "https://www.vinted.pt/items/new*",
          "https://www.vinted.se/items/new*"
        ]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }